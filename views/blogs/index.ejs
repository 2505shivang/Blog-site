<%- include ('partials/header.ejs') -%>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To Blogger Point!</h1>
      <p></p>
      <p>
        <a class="btn btn-primary btn-large" style="color:white; background-color:black;" href="/blogs/new">Add New blog</a>
      </p>

  

        <div class="row text-center" >
          <% blogs.forEach(function(blog){ %>
          <div class="col-md-3 col-sm-9" >
            <div class="thumbnail">
              <img src="<%= blog.image %>">
                <div class="title">
                  <h3><%= blog.title %></h3>
              </div>
              <div class="caption">
                <h4><%= "~ "+blog.Author %></h4>
              </div>
            
              <p>
                <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read Blog!</a>
              </p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>

<%- include ('partials/footer.ejs') -%>