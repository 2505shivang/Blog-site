<%- include ('partials/header.ejs'); -%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= blog.image %>" />
        <div class="caption-full">
          <h4><a><%=blog.name%></a></h4>
          <p><%= blog.content %></p>
          <a class="btn btn-success" href="/blogs/<%= blog._id %>/edit">Edit</a>
          <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"><button class="btn btn-success"  type="submit">Delete</button></form>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/blogs/<%= blog._id %>/comments/new">Add New Comment</a>
        </div>
        <hr />
        <% blog.comments.forEach(function(comment){ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <p>
              <%= comment.text %>
            </p>
            <a class="btn btn-success" href="/blogs/<%= blog._id %>/<%=comment._id%>/edit">Edit</a>
            <form action="/blogs/<%= blog._id %>/<%=comment._id%>?_method=DELETE" method="POST"><button class="btn btn-success"  type="submit">Delete</button></form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/footer.ejs'); -%>