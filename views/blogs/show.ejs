<%- include ('partials/header.ejs'); -%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-6">
      <div class="thumbnail">
      <div style=" justify-content:center;">
        <h2><%= blog.title %></h2>
        <img class="img-responsive " style=" align:center; width: 100%; max-height:300px; " src="<%= blog.image %>" />
        </div>
        <div class="caption-full">
          <h4>Author:-<%=blog.Author%></h4>
          <p style=" font-weight:bolder; font-size:20px; background-color:#F5F5DC; text-align:center;"><%= blog.content %></p>
            <div style=" display: inline-flex; text-align:center;" class="">
              <button class="btn btn-success" style="color:white; background-color:black; display: inline-block;" href="/blogs/<%= blog._id %>/edit">Edit</button>
              <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"><button class="btn btn-success" style="color:white; background-color:black; display: inline-block;" type="submit">Delete</button></form>
            </div>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" style="color:white; background-color:#5F9EA0; display: inline-block;" href="/blogs/<%= blog._id %>/comments/new">Add New Comment</a>
        </div>
        <hr />
        <% blog.comments.forEach(function(comment){ %>
        <div class="row">
          <div class="col-md-12">
            <!-- <strong>< comment.author.username %></strong> -->
            <p  style="background-color:#F0FFFF;  " class="">

              <%= comment.text %>
            </p>
                <div style=" display: inline-flex; text-align:center;" class="">
            <a class="btn btn-success" style="color:white; background-color:#5F9EA0; display: inline-block;" href="/blogs/<%= blog._id %>/comments/<%=comment._id%>/edit">Edit</a>
            <form action="/blogs/<%= blog._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST"><button class="btn btn-success" style="color:white; background-color:#5F9EA0; display: inline-block;"  type="submit">Delete</button></form>
          </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
<%- include ('partials/footer.ejs'); -%>