<%- include("./partials/header.ejs") %>

<div>
    <h1>Blogger</h1>
    <a href="/blogs/new">New Blog</a>
</div>

<div class="row text-center flex-wrap" id="blogs-grid">
    <% blogs.forEach(function(blog){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
               <img src="<%= blog.image %>">
               <div class="caption">
                   <h4><%= blog.Author%></h4>
               </div>
               <p>
                   <a href="blogs/<%= blog._id %>" class="btn btn-primary">More Info</a>
               </p>
            </div>
        </div>
    <% }); %>
</div>

<%- include("./partials/footer.ejs") %>